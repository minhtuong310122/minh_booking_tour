<%= form_for tour, url: url , method: method do |f| %>
  <%= render "shared/error_messages", tour: tour %>
  Title: <%= f.text_field :title, class: "form-control" %><br />
  Image: <%= f.file_field :image, class: "form-control" %><br />
  Price: <%= f.number_field :price, class: "form-control" %><br />
  Description: <%= f.text_area :description, class: "form-control" %><br />
  Tour type: <%= f.select :tour_type, [["Normal tour", "normal_tour"], ["Fixid tour", "fixed_tour"]], class: "form-control" %><br />
  Start date: <%= f.date_field :start_date, class: "form-control" %><br />
  End date: <%= f.date_field :end_date, class: "form-control" %><br />
  Time in day: <%= f.text_field :time_in_day, class: "form-control" %><br />
  Limit member: <%= f.number_field :limit_member, class: "form-control" %><br />

  <% if tour.persisted? %>
    <%= f.submit "Update", class: "btn btn-dark" %>
  <% else %>
    <%= f.submit "Create", class: "btn btn-success" %>
  <% end %>
<% end %>
